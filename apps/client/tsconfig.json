{
  "extends": "tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
    "paths": {
      "api/*": ["api/*"],
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "utilities/*": ["utilities/*"]
    },
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx", "vite-env.d.ts"],
  "exclude": ["pages/cabinet-setup/**/*", "node_modules", "**/*.spec.ts"]
}
