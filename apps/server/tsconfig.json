{
  "extends": "tsconfig/nest.json",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
    "paths": {
      "auth": ["auth"],
      "auth/*": ["auth/*"],
      "config": ["config"],
      "services": ["services"],
      "common/*": ["common/*"],
      "database/*": ["database/*"],
      "models": ["models"],
      "shared": ["shared"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"]
}
